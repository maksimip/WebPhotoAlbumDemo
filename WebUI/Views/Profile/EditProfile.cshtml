@model Domain.Entitis.User
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="navbar navbar-dark bg-dark">
    <div class="container d-flex justify-content-between">
        <a href="#" class="navbar-brand">Photo<i class="fa fa-thumbs-up" aria-hidden="true">Album</i></a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <div class="dropdown show">
            <a class="navbar-toggler" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Albums
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item">Item1</a>
                <a class="dropdown-item">Item2</a>
                <a class="dropdown-item">Item3</a>
            </div>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarProfile" aria-controls="navbarProfile" aria-expanded="true">
            Profile
        </button>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="true"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="bg-dark collapse" id="navbarProfile">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 py-4">
                <h4 class="text-white">@ViewBag.Email</h4>
                <p class="text-muted">information of user</p>
                @Html.ActionLink("Edit", "EditProfile", "Profile", new { @class = "text-white" })
            </div>
            <div class="col-sm-4 py-4">
                <h4 class="text-white">Contact</h4>
                <ul class="list-unstyled">
                    <li><a href="#" class=" text-white"><i class="fa fa-twitter" aria-hidden="true"></i> Twitter</a></li>
                    <li><a href="#" class=" text-white"><i class="fa fa-facebook-official" aria-hidden="true"></i> Facebook</a></li>
                    <li><a href="#" class=" text-white"><i class="fa fa-vk" aria-hidden="true"></i> VK</a></li>
                    <li><a href="#" class=" text-white"><i class="fa fa-envelope-o" aria-hidden="true"></i> Email me</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
    @using (Html.BeginForm("SaveProfile", "Profile", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>EditProfile</h4>
        <hr />
        <div class="row form-group">
            @Html.HiddenFor(m => m.IdUser)
        <div class="col">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First name" })
        </div>
        <div class="col">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last name" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col">
            @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="col">
            @Html.TextBoxFor(m => m.Pass, new { @type = "password", @class = "form-control", @placeholder = "Password" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col">
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @placeholder = "Age" })
        </div>
        <div class="col">
            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", @placeholder = "Country" })
        </div>
    </div>
        <div class="row form-group">
            <input class="btn btn-secondary" type="submit" value="Save" />
            @Html.ActionLink("Cancel", "Index", new { name = Model.FirstName}, new { @class = "btn btn-secondary"})
        </div>
    }