@model Domain.Entitis.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="navbar navbar-dark bg-dark">
    <div class="container d-flex justify-content-between">
        <a href="#" class="navbar-brand">Photo<i class="fa fa-thumbs-up" aria-hidden="true">Album</i></a>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form", @class = "form-inline" }))
        {
           
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @type = "email", @class="form-control", @id="exampleInputEmail1", @placeholder="Enter email"})
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Pass, new { @type = "password", @class = "form-control", @id = "exampleInputPassword1", @placeholder = "Password" })
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
            
        }

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="true"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<span class="text-red">@Html.ValidationSummary(true)</span>
<h1>Registration</h1>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
        <hr />
        <div class="row form-group">
            <div class="col">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First name" })
            </div>
            <div class="col">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last name" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @placeholder = "Email" })
            </div>
            <div class="col">
                @Html.TextBoxFor(m => m.Pass, new { @type = "password", @class = "form-control", @placeholder = "Password" })
            </div>
        </div>
        <dic class="form-group">
            <input class="btn btn-secondary" type="submit" value="Register" />
        </dic>
}
